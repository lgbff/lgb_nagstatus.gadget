<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <name>Nagios Status</name>
  <namespace>windows.sdk</namespace>
  <version>1.5.0</version>
  <author name="Jouko Markkanen">
    <info url="http://www.markkanen.net" />
  </author>
  <copyright>&#169; Jouko Markkanen</copyright>
  <description>Display a status summary of Nagios monitored hosts and services. Click on gadget to view details in flyout.</description>
  <icons>
    <icon height="64" width="64" src="images/nagstatus_icon.jpg" />
  </icons>
  <hosts>
    <host name="sidebar">
      <base type="HTML" apiVersion="1.0.0" src="Nagstatus.html" />
      <permissions>Full</permissions>
      <platform minPlatformVersion="1.0" />
    </host>
  </hosts>
</gadget>
